generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  STAFF
}

enum SubscriptionPlan {
  TRIAL
  BASIC
  PROFESSIONAL
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
}

model Organization {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())

  // Stripe & Subscription
  stripeCustomerId     String?            @unique
  stripeSubscriptionId String?
  subscriptionPlan     SubscriptionPlan   @default(TRIAL)
  subscriptionStatus   SubscriptionStatus @default(TRIALING)
  trialEndsAt          DateTime?

  users       User[]
  patients    Patient[]
  invitations StaffInvitation[]
}

model User {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  email          String       @unique
  passwordHash   String
  name           String
  role           Role         @default(STAFF)
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  mealPlans      MealPlan[]

  // E-Mail-Verifizierung
  emailVerified          Boolean   @default(false)
  emailVerificationToken String?   @unique

  // Passwort-Reset
  resetToken             String?   @unique
  resetTokenExpiresAt    DateTime?

  @@index([organizationId])
  @@index([email])
}

model Patient {
  id             String        @id @default(cuid())
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id])
  pseudonym      String
  birthYear      Int
  currentWeight  Decimal       @db.Decimal(5, 2)
  targetWeight   Decimal       @db.Decimal(5, 2)
  targetDate     DateTime?     // Optionales Zieldatum f√ºr Gewichtsziel
  allergies      String[]
  notes          String?
  isActive       Boolean       @default(true)
  weightHistory  WeightEntry[]
  mealPlans      MealPlan[]
  createdAt      DateTime      @default(now())
  createdBy      String

  @@index([organizationId])
}

model WeightEntry {
  id         String   @id @default(cuid())
  patientId  String
  patient    Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  weightKg   Decimal  @db.Decimal(5, 2)
  recordedAt DateTime @default(now())
  recordedBy String

  @@index([patientId])
}

model MealPlan {
  id            String        @id @default(cuid())
  patientId     String
  patient       Patient       @relation(fields: [patientId], references: [id], onDelete: Cascade)
  weekStart     DateTime
  planJson      Json
  totalKcal     Int
  promptUsed    String        @db.Text
  createdBy     String
  createdByUser User          @relation(fields: [createdBy], references: [id])
  shoppingList  ShoppingList?
  createdAt     DateTime      @default(now())

  @@index([patientId])
  @@index([createdBy])
}

model ShoppingList {
  id         String   @id @default(cuid())
  mealPlanId String   @unique
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  itemsJson  Json
  createdAt  DateTime @default(now())
}

model StaffInvitation {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  email          String
  name           String
  role           Role         @default(STAFF)
  token          String       @unique
  expiresAt      DateTime
  invitedBy      String
  createdAt      DateTime     @default(now())

  @@unique([organizationId, email])
  @@index([token])
}
